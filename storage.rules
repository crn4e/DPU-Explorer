rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to everyone for all files.
    // This allows images to be displayed publicly in the app.
    match /{allPaths=**} {
      allow read: if true;
      // Allow write access for all paths to authenticated users
      // to resolve CORS preflight issues in development environments.
      allow write: if request.auth != null;
    }
  }
}
