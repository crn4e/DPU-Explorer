rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to everyone for all files.
    // This allows images to be displayed publicly in the app.
    match /{allPaths=**} {
      allow read: if true;
    }

    // Allow write (upload, update, delete) access only to authenticated users.
    // This ensures only logged-in admins can upload images.
    match /locations/{locationId}/{fileName} {
      allow write: if request.auth != null;
    }
  }
}
