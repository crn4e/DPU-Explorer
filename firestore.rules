rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Rules for Admins
    // Only authenticated users can read or write to the admins collection.
    match /admins/{adminId} {
      allow read, write: if request.auth != null;
    }

    // Rules for Students
    // Only authenticated users can read or write to their own student document.
    match /students/{studentId} {
      allow read, write: if request.auth != null && request.auth.uid == studentId;
    }

    // Rules for Locations
    // Allow public read access for locations.
    // Restrict write access (create, update, delete) to authenticated users.
    match /locations/{locationId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
