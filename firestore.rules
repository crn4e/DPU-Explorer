rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Rules for Admins
    match /admins/{adminId} {
      // Allow anyone to read admin data (for login/registration checks)
      // Allow logged-in users to update (for approvals)
      allow read, update: if request.auth != null;
      
      // Allow anyone to create a new admin document
      allow create: if true;
    }

    // Rules for Students
    match /students/{studentId} {
      // Allow anyone to create a new student document
      allow create: if true;
      
      // Only the authenticated student can read/update their own data
      allow read, update: if request.auth != null && request.auth.uid == studentId;
    }
  }
}
