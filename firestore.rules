rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Admins collection
    match /admins/{adminId} {
      // Allow anyone to read admin data (for login/register checks)
      allow read: if true;
      
      // Allow anyone to create an admin document, but only if the role is 'admin'
      allow create: if request.resource.data.role == 'admin';
      
      // Only authenticated admins can update their own status (or other fields)
      allow update: if request.auth != null && request.auth.uid == adminId;
      
      // Disallow deletion for safety
      allow delete: if false;
    }

    // Students collection
    match /students/{studentId} {
      // Allow anyone to create a student document
      allow create: if true;
      
      // Only the authenticated student can read/update their own data
      allow read, update: if request.auth != null && request.auth.uid == studentId;
      
      // Disallow deletion
      allow delete: if false;
    }
    
    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
