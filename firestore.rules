rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Admins collection: Only authenticated users can manage admin documents.
    match /admins/{adminId} {
      allow read, write: if request.auth != null;
    }

    // Students collection: Allow users to create their own accounts, 
    // but only let them read/write their own data post-creation.
    match /students/{studentId} {
      allow create: if request.auth != null;
      allow read, write: if request.auth != null && request.auth.uid == studentId;
    }
    
    // Locations collection: Allow public read access, but restrict writes to authenticated users.
    match /locations/{locationId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
    